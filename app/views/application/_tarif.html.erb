<% unless local_assigns[:full] %>
  <% content_for :titleise do %>
    <div class="flex flex-wrap">
      <div class="w-full max-w-md mx-auto text-center">
        <h1 class="m-2 p-2">
          <%= icon('fas', 'crown', class: 'fa-2x') %>
          Оформите подписку
        </h1>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="flex flex-wrap bg-gray-800 rounded-t">
    <div class="w-full max-w-md mx-auto text-center">
      <h1 class="m-2 p-2 font-bold text-yellow-400 mb-2">
        <%= icon('fas', 'crown', class: 'fa-2x') %>
        Оформите подписку
      </h1>
    </div>
  </div>
<% end %>

<div class="mb-4 text-center text-gray-700">

  <h3 class="leading-normal font-normal">
    <div class="max-w-md w-full lg:flex border-b">
      <div class="py-5 pl-2 pr-4 my-5 lg:mr-0 lg:border-r">
        Доступ ко всем закрытым материалам
      </div>
      <div class="py-5 px-2 my-5 lg:ml-2">
        Твой профиль без ограничений
      </div>
    </div>
    <div class="py-5 px-2 mb-5">
      <% if user_signed_in? %>
        Выберите подходящий для вас тариф
        <%= form_for :sberbank, url: main_app.sberbanks_url(subdomain: false, amountorub: (summ_large_month+"00").to_i), method: :post do |f| %>
          <%= content_tag(:button, class: 'btn mb-2', type: 'submit', data: {disable_with: disable_helper('Переход в Сбербанк Онлайн')}) do %>
            <span><%= summ_large_month %></span><%= icon('fas', 'ruble-sign fa-xs') %> / 6 месяцев
          <% end %>
        <% end %>
        <%= form_for :sberbank, url: main_app.sberbanks_url(subdomain: false, amountorub: (summ_small_month+"00").to_i), method: :post do |f| %>
          <%= content_tag(:button, class: 'btn', type: 'submit', data: {disable_with: disable_helper('Переход в Сбербанк Онлайн')}) do %>
              <span><%= summ_small_month %></span><%= icon('fas', 'ruble-sign fa-xs') %> / 3 месяцa
          <% end %>
        <% end %>
      <% else %>
        Зарегистрируйтесь и получите
        <%= link_to '1 месяц бесплатно!', main_app.new_user_registration_path, class: 'btn' %>
      <% end %>
    </div>
    <div class="inline-flex items-center text-center">
      <%= image_tag 'logo_cards_small.png', width: 200, class: 'mx-4' %>
      <%= image_tag 'logo-sberbank-online.png', width: 200, class: 'mx-4' %>
    </div>
  </h3>

</div>
