<% cache post do %>
  <%= link_to main_app.url_for([post.posttable, post, subdomain: notification_target_helper(post)]), class: 'md:flex lg:p-2 lg:rounded-lg bg-gray-100 shadow-lg hover:shadow-xl hover:text-gray-800 pt-5', id: "post_#{post.id}" do %>

    <%= image_helper(post) %>

    <div class="mt-4 md:mt-0 px-2">
      <% if post.type.present? && request.subdomain.blank? %>
        <div class="ml-2 flex items-center">
          <div class="flex"><%= user_avatar_helper(post.user, 40) %></div>
          <div>
            <div class="text-gray-500">
              <%= post.user.name_full %>
            </div>
            <div class="text-lg leading-tight font-semibold">
              <%= sanitize(strip_tags(post.title)) %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="uppercase tracking-wide leading-tight text-xs text-gray-500"><%= sanitize(strip_tags(post.posttable.title)) %>
        </div>
        <div class="block mt-1 text-lg leading-tight font-semibold">
          <%= content_tag :span, icon('fas', 'crown'), class: 'text-yellow-500' if post.subscribe == true %>
          <%= sanitize(strip_tags(post.title)) %>
        </div>
      <% end %>
      <p class="mt-2"><%= truncate(strip_tags(post.description), length: 200, omission: '...') %></p>
      <%= content_tag :span, icon('fas', 'comment-dots', post.comments.count), class: 'pl-1 text-xs' if post.comments.present? %>

      <div class="inline-flex items-center text-xs pl-2">
        <%= time_tag(post.created_at, :format=>'%d %B %Y Ð³.') %>
      </div>
    </div>
  <% end %>
  <div class="border-b lg:border-0 mt-5"></div>
<% end %>
