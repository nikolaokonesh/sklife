<% cache category do %>
  <%= link_to main_app.category_path(category), data: {"controller" => "activelink", "activelink-active-on" => "#{main_app.category_path(category)}"}, class: 'link' do %>
    <div class="menu">
      <%= sanitize(strip_tags(category.title)) %>
      <%= content_tag :span, icon_svg('chat.svg', class: 'svg-default') +  category.comments.count.to_s, class: 'pl-1 text-xs' if category.comments.present? %>
    </div>
  <% end %>
<% end %>
