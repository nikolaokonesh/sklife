<%= link_to root_path, class: "z-50 mt-3 block text-white hover:text-gray-300" do %>
  <div class="flex items-center">
    <div class="h-20 w-20 table rounded-full hover:border-blue-400 shadow-2xl mr-2" style="background: url('<%= user_avatar(@user_agent, 300) %>') 100% 100% no-repeat; background-size: cover;">
    </div>
    <div class="text-left leading-tight">
      <div class="text-2xl text-shadow font-bold leading-tight">
        <%= icon_svg('crowns.svg', class: 'w-8 h-8 inline -mt-2') if @user_agent.subscribed? %> <%= @user_agent.name_full %>
      </div>
      <%= content_tag :div, sanitize(strip_tags(@user_agent.profile.email)), class: 'text-xs inline-block text-shadow pr-2' if @user_agent.profile.email.present? %>
      <%= content_tag :div, 'Ñ‚.' + sanitize(strip_tags(@user_agent.profile.phone)), class: 'text-xs inline-block text-shadow' if @user_agent.profile.phone.present? %>
    </div>
  </div>
  <div class="text-xs text-shadow pr-2">
    <%= content_tag :div, sanitize(strip_tags(@user_agent.profile.org)), class: 'block' %>
    <%= content_tag :div, sanitize(strip_tags(@user_agent.profile.bio)), class: 'block text-gray-200' %>
  </div>
<% end %>
