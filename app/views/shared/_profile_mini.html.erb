<div class="lax lg:flex items-center pb-4" data-lax-opacity="0 1, 100 0.5, 400 0">
  <%= link_to root_path do %>
  <div class="h-20 w-20 table rounded-full border-2 shadow-2xl mb-2 lg:mr-6 mx-auto bg-cover" style="background-image: url('<%= user_avatar(@user_agent, 180) %>')">
  </div>
  <% end %>
  <div class="text-center lg:text-left">
    <h2 class="text-2xl text-white">
      <%= @user_agent.name_full %>
    </h2>
    <div class="text-sm" data-target="reply.userprof">
      <div class="text-white">
        <%= sanitize(strip_tags(@user_agent.profile.bio)) %>
      </div>
    </div>
  </div>
</div>

