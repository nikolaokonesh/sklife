<div class="items-center p-4">
  <div class="h-56 w-56 mt-10 lg:mt-0 table rounded-full shadow-2xl mb-2 mx-auto bg-cover" style="background-image: url('<%= user_avatar(@user_agent, 200) %>')">
  </div>
  <div class="text-white text-center">
    <h2 class="text-2xl text-shadow font-bold leading-tight">
      <%= icon('fas', 'crown', class: 'text-yellow-500') if @user_agent.subscribed? %> <%= @user_agent.name_full %>
    </h2>
    <div class="mx-auto my-2 border-b-2 border-teal-500 opacity-25"></div>
    <div class="text-sm leading-tight" id="btn_hide_profile">
      <%= content_tag :div, sanitize(strip_tags(@user_agent.profile.org)), class: 'pr-1 mb-1 text-shadow' %>
      <%= content_tag :div, sanitize(strip_tags(@user_agent.profile.bio)), class: 'pr-1 mb-1 text-shadow' %>
      <%= content_tag :div, icon('fas', 'envelope', sanitize(strip_tags(@user_agent.profile.email))), class: 'inline-block text-shadow' if @user_agent.profile.email.present? %>
      <%= content_tag :div, icon('fas', 'phone', sanitize(strip_tags(@user_agent.profile.phone))), class: 'inline-block text-shadow' if @user_agent.profile.phone.present? %>
      <% if @user_agent == current_user %>
        <div class="block mb-5">
          <%= link_to icon("fas", "pen", "Изменить профиль"), main_app.edit_profile_path(@user_agent.profile), class: 'block text-sm text-gray-200 hover:text-white p-2', remote: true, data: {disable_with: disable_helper('Загрузка...')} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

