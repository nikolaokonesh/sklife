<% content_for :canonical_link, books_url(subdomain: false) %>

<% if user_signed_in? %>
  <%= link_to icon('fas', 'plus fa-2x'), main_app.new_book_path, class: 'link float-right', title: 'Добавить книгу' if current_user.admin? %>
<% end %>

<div id="library_index" data-turbolinks-permanent>
  <%= render partial: 'market/knigi/books/book', collection: @library_books, cached: true %>
</div>
<div class='text-center pagination' id="library_index_paginate" data-turbolinks-permanent>
  <%= render partial: "next_link", locals: {pagy: @pagy} %>
</div>
