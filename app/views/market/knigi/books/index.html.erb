<% content_for :canonical_link, books_url(subdomain: false) %>

<% if user_signed_in? %>
  <div class="block">
    <%= link_to icon('fas', 'plus fa-2x'), main_app.new_book_path, class: 'link pl-2', title: 'Добавить книгу' if current_user.admin? %>
  </div>
<% end %>

<div class="w-full bg-gray-100 p-2 mb-5 shadow-inner rounded" data-controller="search" data-search-url="<%= booksearch_index_url %>">
  <div class="flex items-center">
    <%= icon('fas', 'search', class: 'text-gray-500 pr-2')%>
    <%= text_field_tag :query, "", placeholder: "Введите название книги", class: "w-full placeholder-gray-600", data: { action: "keyup->search#fetchResults keydown->search#navigateResults", target: "search.query" }, autofocus: false, autocomplete: "off" %>
  </div>
  <div data-target="search.results"></div>
</div>

<div class="block" id="books_index" data-turbolinks-permanent>
  <%= render partial: 'market/knigi/books/book', collection: @books %>
</div>
<div class='text-center pagination' id="books_index_paginate" data-turbolinks-permanent>
  <%= pag_helper(@books, 'Далее') %>
</div>
