<% content_for :canonical_link, books_url(subdomain: false) %>

<div id="books_index" data-turbolinks-permanent>
  <%= render partial: 'market/knigi/books/book', collection: @books, cached: true %>
</div>
<div class='text-center pagination' id="books_index_paginate" data-turbolinks-permanent>
  <%= link_to_next_page(@books, icon('fas', 'chevron-down', 'Далее'), class: 'pg-link', remote: true, data: {disable_with: icon('fas', 'spinner fa-pulse', 'Загрузка')}) %>
</div>
