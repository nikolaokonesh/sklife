<% if @comment.parent_id? %>
    var comments = document.querySelector("#<%= dom_id(@comment.parent) %>_comments")
<% else %>
    var comments = document.querySelector("#comments")
<% end %>

comments.insertAdjacentHTML('afterbegin', '<%=j render partial: "comments/comment", locals: { comment: @comment }, format: :html %>')
document.querySelector("#comment_<%= @comment.id %>").classList.add("bg-green-200")

var form = comments.parentElement.querySelector("form")
form.reset()

<% if @comment.parent_id? %>
  form.classList.add("hidden")
<% end %>
