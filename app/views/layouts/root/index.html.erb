<% content_for :header do %>
  <div class="absolute w-full pt-2 max-w-5xl">
    <div class="z-10 w-full pt-2 pl-4">
      <%= render 'shared/navbar' %>
    </div>
  </div>
  <div class="header-fon w-full h-32">
  </div>
<% end %>

<% content_for :menu do %>
  <%= render partial: 'article/categories/category', collection: Article::Category.includes(:comments).where(type: nil), cached: true %>
  <div class="tracking-wide text-center text-sm text-gray-500 font-bold border-b pb-1 pt-6">
    МАРКЕТ
  </div>
  <%= active_link_to main_app.books_path, class: 'link', "up-target" => ".main", "up-transition" => "cross-fade", "up-instant" => "", "up-preload" => "" do %>
    <div class="menu">
      Online-Книги
    </div>
  <% end %>
<% end %>

<%= render template: "layouts/root/application" %>
