<% content_for :header do %>
  <div class="w-full h-24 lg:h-64" style="<%= background_helper(@user_agent) %>">
    <div class="container lg:pt-10 max-w-3xl mx-auto">
      <%= render 'shared/navbar' %>
    </div>
  </div>
<% end %>

<% content_for :menu do %>
  <%= render partial: 'article/categories/category', collection: Article::Category.where(type: nil) %>

  <%= active_link_to main_app.books_path, class: 'link' do %>
    <div class="tracking-wide font-bold border-b  px-2 py-3">
      Книги
      <% if user_signed_in? %>
        <%= link_to icon('fas', 'plus'), main_app.new_book_path, class: 'float-right', title: 'Добавить книгу' if current_user.admin? %>
      <% end %>
    </div>
  <% end %>


<% end %>

<%= render template: "layouts/application" %>
