<!DOCTYPE html>
<html>
  <head>
  <%= display_meta_tags site: "Халыма" %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <% if yield(:canonical_link).present? %>
    <%= stylesheet_link_tag yield(:canonical_link), rel: "canonical", media: nil %>
  <% end %>
  <%= favicon_link_tag 'icon.ico' %>
  </head>

  <body data-controller="modal" data-modal-allow-background-close="false">
    <% if yield(:fullpath).present? %>
      <%= yield(:fullpath) %>
    <% else %>
      <script>
        Appcontroller = "<%= request.original_fullpath %>"
      </script>
    <% end %>

    <%= render 'shared/notice' %>

    <%= yield(:content_body)%>

    <% cache "footer_v1" do %>
      <%= render('shared/footer', color: 'inline-block text-gray-600 hover:text-gray-700 pr-2') %>
    <% end %>

    <%= render 'shared/photoswipe' %>

    <%= render 'shared/searchmodal' %>
  </body>
</html>
