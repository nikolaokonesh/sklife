<% content_for :header do %>
  <div class="w-full pb-24" style="<%= background_helper(@user_agent) %>">
    <div class="flex flex-wrap">
      <div class="w-full">
        <div class="z-50 container max-w-3xl mx-auto">
          <%= render 'shared/navbar' %>
        </div>
      </div>
      <div class="w-full">
        <div class="container max-w-3xl mx-auto px-1">
          <%= render 'shared/profile_mini' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% content_for :menu do %>
  <%= render partial: 'article/categories/category', collection: @user_agent.categories.includes(:comments).where(type: 'Article::Blog::Category'), cached: true %>
<% end %>

<%= render template: "layouts/blog/application" %>
