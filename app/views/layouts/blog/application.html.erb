<% content_for :content_body do %>
  <%= yield(:header) %>
  <div class="w-full bg-white mx-auto lg:px-8 lg:py-6">
    <div class="flex flex-wrap flex-row-reverse">
      <div class="w-full lg:w-1/2 lg:mr-auto lg:ml-4">
        <% if content_for?(:titleise) %>
          <div class="w-full max-w-lg xl:max-w-2xl px-2">
            <%= yield :titleise %>
          </div>
        <% end %>
        <%= yield %>
      </div>
      <div class="w-full lg:w-1/4 lg:ml-auto mt-12 lg:mt-0">
        <%= active_link_to main_app.root_path, class: 'link', active: :exclusive do %>
          <div class="menu">
            Главное
          </div>
        <% end %>
        <%= yield(:menu) %>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>
