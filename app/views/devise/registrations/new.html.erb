<% content_for :header_title do %>
  <h1 class="pt-10"><%= "Регистрация".to_s.upcase %></h1>
<% end %>

<div class="p-4 px-3 py-10 flex justify-center">
  <div class="w-full max-w-sm">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="mb-4">
        <%= f.text_field :name, label: false, autofocus: true, placeholder: "Имя и фамилия", required: true, class: 'field' %>
      </div>
      <div class="mb-4">
        <%= f.email_field :email, label: false, autofocus: true, autocomplete: "email", placeholder: 'Ваша электронная почта', class: 'field' %>
      </div>
      <div class="mb-6">
        <%= f.password_field :password, label: false, autocomplete: "off", placeholder: "Пароль, минимум #{@minimum_password_length} символов", class: "field" %>
      </div>

      <div class="flex items-center justify-between">
        <%= content_tag(:button, 'Регистрация', type: 'submit', data: {disable_with: disable_helper('Регистрация')}, class: 'btn') %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    <p class="text-center mt-8">
      <%= active_link_to "Пользовательское соглашение и Политика конфиденциальности", main_app.url_for(controller: "/static", action: 'show', page: 'privacy', subdomain: false), class: 'block align-baseline text-xs text-blue-500 hover:text-blue-700' %>
    </p>
  </div>
</div>
