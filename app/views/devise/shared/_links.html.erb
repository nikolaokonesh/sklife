<%- if controller_name != 'sessions' %>
  <%= link_to 'Войти', new_session_path(resource_name), class: 'block align-baseline font-bold text-sm link' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to 'Регистрация', new_registration_path(resource_name), class: 'block align-baseline font-bold link' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'block align-baseline text-sm mt-2' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не получили инструкцию подтверждения E-mail?", new_confirmation_path(resource_name), class: 'block align-baseline font-bold text-sm  link' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не получили инструкцию разблокировки аккаунта?", new_unlock_path(resource_name), class: 'block align-baseline font-bold text-sm  link' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Войти через #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'block align-baseline font-bold text-sm  link' %>
  <% end -%>
<% end -%>
